{
  "openapi": "3.0.2",
  "servers": [],
  "info": {
    "version": "2.0.0-draft.3",
    "title": "GA4GH Beacon API Specification - Individuals endpoints",
    "description": "TBD.",
    "contact": {
      "email": "beacon@ga4gh.org"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags": [
    {"name": "GET Endpoints",
      "description": "Available endpoints in this API. All of them have a POST counterpart."
    },
    {"name": "POST Endpoints",
      "description": "The same operations than GET, just by POST."
    }

  ],
  "paths": {
    "/datasets": {
      "get": {
        "parameters": [
          { "$ref":"#/components/parameters/requestedSchema" },
          { "$ref":"#/components/parameters/skip" },
          { "$ref":"#/components/parameters/limit" }
        ],
        "description": "Get a list of datasets",
        "operationId": "getDatasets",
        "tags": [ "GET Endpoints" ],
        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconResultsetsResponse.json"
                }
              }
            }
          },
          "default":{
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      },
      "post": {
        "description": "Get a list of datasets",
        "operationId": "postDatasetsRequest",
        "tags": [ "POST Endpoints" ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../beacon-framework-v2/requests/beaconRequestBody.json"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": 
              {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconResultsetsResponse.json"
                }
              }
            }
          },
          "default": {
            "description": "An unsuccessful operation.\n",
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      }
    },
    "/datasets/{id}": {
      "get": {
        "parameters": [
          { "$ref":"#/components/parameters/requestedSchema" },
          { "$ref":"#/components/parameters/entryId" }
        ],
        "description": "Get details about one dataset, identified by its (unique) 'id'.\n",
        "operationId": "getOneDataset",
        "tags": [ "GET Endpoints" ],
        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": 
              {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconResultsetsResponse.json"
                }
              }
            }
          },
          "default": {
            "description": "An unsuccessful operation.\n",
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      },
      "post": {
        "description": "Get details about one dataset, identified by its (unique) 'id'.\n",
        "operationId": "postOneDataset",
        "tags": [ "POST Endpoints" ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../beacon-framework-v2/requests/beaconRequestBody.json"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": 
              {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconResultsetsResponse.json"
                }
              }
            }
          },
          "default": {
            "description": "An unsuccessful operation.\n",
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      }
    },
    "/datasets/{id}/example_entries": {
      "get": {
        "parameters": [
          { "$ref":"#/components/parameters/requestedSchema" },
          { "$ref":"#/components/parameters/skip" },
          { "$ref":"#/components/parameters/limit" },
          { "$ref":"#/components/parameters/entryId" }
        ],
        "description": "Get the example entries details from one dataset, identified by its (unique) 'id'.\n",
        "operationId": "getOneDatasetEntries",
        "tags": [ "GET Endpoints" ],
        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": 
              {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconResultsetsResponse.json"
                }
              }
            }
          },
          "default": {
            "description": "An unsuccessful operation.\n",
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      },
      "post": {
        "description": "Get the example entries details from one dataset, identified by its (unique) 'id'.\n",
        "operationId": "postOneDatasetEntries",
        "tags": [ "POST Endpoints" ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../beacon-framework-v2/requests/beaconRequestBody.json"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": 
              {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconResultsetsResponse.json"
                }
              }
            }
          },
          "default": {
            "description": "An unsuccessful operation.\n",
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      }
    },
    "/datasets/{id}/filtering_terms": {
     "get": {
        "parameters": [
          { "$ref":"#/components/parameters/entryId" },
          { "$ref":"#/components/parameters/skip" },
          { "$ref":"#/components/parameters/limit" }
        ],
        "description": "Get the list of filtering terms that could be used with a given dataset, identified by its (unique) 'id'.\n",
        "operationId": "getOneDatasetFilteringTerms",
        "tags": [ "GET Endpoints" ],

        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": 
              {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconFilteringTermsResponse.json"
                }
              }
            }
          },
          "default": {
            "description": "An unsuccessful operation.\n",
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      },
      "post": {
        "description": "Get the list of filtering terms that could be used with a given dataset, identified by its (unique) 'id'.\n",
        "operationId": "postOneDatasetFilteringTerms",
        "tags": [ "POST Endpoints" ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../beacon-framework-v2/requests/beaconRequestBody.json"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation.\n",
            "content": {
              "application/json": 
              {
                "schema":{
                  "$ref": "../../beacon-framework-v2/responses/beaconFilteringTermsResponse.json"
                }
              }
            }
          },
          "default": {
            "description": "An unsuccessful operation.\n",
            "$ref": "../../beacon-framework-v2/responses/beaconErrorResponse.json"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "requestedSchema": {
        "name": "requestedSchema",
        "description": "Schema to be used to format the `result` field in the resposne. The response will use Beacon format.",
        "in": "query",
        "required": false,
        "schema": {
          "type": "string"
        },
        "example": "ga4gh-service-info-v1.0\n"
      },
      "skip": {
        "name": "skip",
        "in": "query",
        "schema":{
          "$ref": "../../beacon-framework-v2/common/beaconCommonComponents.json#/definitions/Skip"
        }
      },
      "limit": {
        "name": "limit",
        "in": "query",
        "schema":{
          "$ref": "../../beacon-framework-v2/common/beaconCommonComponents.json#/definitions/Limit"
        }
      },
      "entryId": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema":{
          "type":"string"
        }
      }
    }
  }
}