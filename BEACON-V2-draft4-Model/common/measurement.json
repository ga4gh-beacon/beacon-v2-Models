{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Measurement",
  "description": "Definition of a measurement class.",
  "type": "object",
  "properties": {
    "assayCode": {
      "description": "Class that describes the assay used to produce the measurement",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id": "LOINC:26515-7",
        "label": "Platelets [#/volume] in Blood"
      }
    },
    "measurementValue": {
      "description": "The result of the measurement",
      "oneOf": [
        {
          "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-v2-Models/main/BEACON-V2-draft4-Model/common/value.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-v2-Models/main/BEACON-V2-draft4-Model/common/complexValue.json"
        }
      ]
    },
    "observationMoment": {
      "description": "Moment in time at which measurement was performed. RECOMMENDED.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-v2-Models/main/BEACON-V2-draft4-Model/common/timeElement.json",
      "example": {
        "age": {
          "iso8601duration": "P53Y8M"
        }
      }
    },
    "date": {
      "description": "Date of measurement",
      "type": "string",
      "format": "date"
    },
    "procedure": {
      "description": "Clinical procedure performed to acquire the sample used for the measurement",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-v2-Models/main/BEACON-V2-draft4-Model/common/procedure.json",
      "example": {
        "code": {
          "id": "NCIT:C5189",
          "label": "Radical Cystoprostatectomy"
        }
      }
    },
    "notes": {
      "description": "Unstructured text to describe this measurement",
      "type": "string",
      "example": "Some free text"
    }
  },
  "required": ["assayCode", "measurementValue"],
  "additionalProperties": true
}
